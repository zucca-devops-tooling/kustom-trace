<configuration scan="true" scanPeriod="30 seconds" debug="false">
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <property name="DEFAULT_CONSOLE_LEVEL" value="WARN"/>
    <property name="DEFAULT_FILE_LEVEL" value="INFO"/>
    <property name="DEFAULT_APP_LOG_LEVEL" value="INFO"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%ex{short}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${kustomtrace.console.loglevel:-${DEFAULT_CONSOLE_LEVEL}}</level>
        </filter>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_FILE:-kustomtrace-unconfigured.log}</file>
        <append>true</append>
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%ex</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${kustomtrace.file.loglevel:-${DEFAULT_FILE_LEVEL}}</level>
        </filter>
    </appender>

    <logger name="dev.zucca_ops.kustomtrace" level="${kustomtrace.app.loglevel:-${DEFAULT_APP_LOG_LEVEL}}" additivity="false">
        <if condition='!property("LOG_FILE").isDefined() || property("LOG_FILE").length() == 0'>
            <then>
                <appender-ref ref="STDOUT" />
            </then>
        </if>

        <if condition='property("LOG_FILE").length() > 0'>
            <then>
                <appender-ref ref="FILE" />
            </then>
        </if>
    </logger>

    <root level="WARN"> <appender-ref ref="STDOUT" /> <if condition='property("LOG_FILE").length() > 0'>
        <then>
            <appender-ref ref="FILE" /> </then>
    </if>
    </root>

    <logger name="ch.qos.logback" level="ERROR" />
</configuration>